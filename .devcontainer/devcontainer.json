{
    "name": "Python Poetry Devcontainer",
    "build": {
	"dockerfile": "Dockerfile",
	"context": "."
    },
    "settings": {
	"terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "poetry install",
    "remoteUser": "ubuntu",
    "mounts": [
    	"source=${localEnv:HOME}/.local/share/opencode,target=/home/ubuntu/.local/share/opencode,type=bind,consistency=cached"	
    ]
}
