{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["opencode"],
  "model": "anthropic/claude-sonnet-4-6",
  "small_model": "anthropic/claude-haiku-4-5",
  "default_agent": "plan",
  "permission": {
    "*": "allow",
    "bash": {
      "*": "allow",
      "rm *": "ask"
    },
    "webfetch": "ask",
    "websearch": "ask",
    "external_directory": "ask"
  },
  "lsp": {
    "pyright": {
      "command": ["poetry", "run", "pyright-langserver", "--stdio"]
    }
  }
}
